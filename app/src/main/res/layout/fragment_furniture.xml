<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<ImageView
    android:id="@+id/furniture_background"
    android:layout_width="0dp"
    android:layout_height="180dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:src="@drawable/furniture_background"
    android:scaleType="centerCrop"/>
    <ImageView
        android:id="@+id/furniture_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/furniture_background"
        app:layout_constraintTop_toBottomOf="@+id/furniture_background"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        />
    <ImageButton
        android:id="@+id/furniture_wishlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/furniture_background"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_unfavorite"
        android:background="?attr/selectableItemBackgroundBorderless"
        />
    <TextView
        android:id="@+id/furniture_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/furniture_icon"
        tools:text="الاسم" />
    <TextView
        android:id="@+id/furniture_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/furniture_name"
        tools:text="الاسم" />
    <androidx.appcompat.widget.AppCompatRatingBar
        android:id="@+id/furniture_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        style="@style/Widget.AppCompat.RatingBar.Small"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:progressTint="@color/rating_color"
        app:layout_constraintTop_toBottomOf="@+id/furniture_details"/>
    <TextView
        android:id="@+id/furniture_rate_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/furniture_rating"
        tools:text="تقييم"
        android:drawableEnd="@drawable/ic_baseline_rate_review"
        android:drawablePadding="8dp"
        app:layout_constraintTop_toTopOf="@+id/furniture_rating"/>
    <TextView
        android:id="@+id/furniture_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:drawableStart="@drawable/ic_baseline_location"
        android:drawablePadding="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/furniture_rating"
        tools:text="الاسم" />
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/furniture_tab"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/furniture_location"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tabIndicatorColor="@color/login_color"
        app:tabSelectedTextColor="@color/login_color"
        app:tabTextColor="@color/colorGrey"
        />
<androidx.viewpager2.widget.ViewPager2
    android:id="@+id/furniture_pager"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/furniture_tab"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>