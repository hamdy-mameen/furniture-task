<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    android:padding="8dp"
    >
<ImageView
    android:id="@+id/discover_item_img"
    android:layout_width="60dp"
    android:layout_height="60dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"

    />
    <TextView
        android:id="@+id/discover_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/discover_item_img"
        app:layout_constraintStart_toStartOf="@+id/discover_item_img"
        app:layout_constraintEnd_toEndOf="@+id/discover_item_img"
        tools:text="name"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>