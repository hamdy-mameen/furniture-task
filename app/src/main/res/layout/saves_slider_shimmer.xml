<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorGrey">

    <ImageView
        android:id="@+id/saves_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="32dp"
        app:layout_constraintBottom_toTopOf="@+id/saves_card"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/saves_card" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/saves_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/offers_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline6">

        <ImageView
            android:id="@+id/saves_slider_icon1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/saves_slider_product1"
            app:layout_constraintTop_toBottomOf="@+id/saves_slider_name" />

        <ImageView
            android:id="@+id/saves_slider_icon2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintEnd_toStartOf="@+id/saves_slider_product1"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/saves_slider_product2"
            app:layout_constraintTop_toBottomOf="@+id/saves_slider_name" />

        <ImageView
            android:id="@+id/saves_slider_icon3"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintEnd_toStartOf="@+id/saves_slider_product2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/saves_slider_product3"
            app:layout_constraintTop_toBottomOf="@+id/saves_slider_name" />

        <ImageView
            android:id="@+id/saves_slider_furnitureIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/saves_slider_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/separator"
            tools:text=" انتريه مودرن" />

        <TextView
            android:id="@+id/saves_slider_product1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/saves_slider_icon1"
            app:layout_constraintEnd_toStartOf="@+id/saves_slider_icon1"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/saves_slider_icon2"
            app:layout_constraintTop_toTopOf="@+id/saves_slider_icon1"
            tools:text="عرض 1" />

        <TextView
            android:id="@+id/saves_slider_product2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/saves_slider_icon2"
            app:layout_constraintEnd_toStartOf="@+id/saves_slider_icon2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/saves_slider_icon3"
            app:layout_constraintTop_toTopOf="@+id/saves_slider_icon2"
            tools:text="عرض2" />

        <TextView
            android:id="@+id/saves_slider_product3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/saves_slider_icon3"
            app:layout_constraintEnd_toStartOf="@+id/saves_slider_icon3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/saves_slider_icon3"
            tools:text="عرض3" />

        <TextView
            android:id="@+id/saves_slider_furniture_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/saves_slider_furnitureIcon"
            app:layout_constraintRight_toLeftOf="@+id/saves_slider_furnitureIcon"
            app:layout_constraintTop_toTopOf="@+id/saves_slider_furnitureIcon"
            tools:text="عرض3" />

        <TextView
            android:id="@+id/saves_slider_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:textSize="20sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/saves_slider_product1"
            tools:text="سعر العرض" />

        <TextView
            android:id="@+id/timer_days"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/offers_background"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/timer_hours"
            tools:text="00" />

        <TextView
            android:id="@+id/timer_hours"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/offers_background"
            android:gravity="center"
            app:layout_constraintLeft_toRightOf="@+id/timer_days"
            app:layout_constraintTop_toTopOf="@+id/timer_minutes"
            tools:text="00" />

        <TextView
            android:id="@+id/timer_minutes"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/offers_background"
            android:gravity="center"
            app:layout_constraintLeft_toRightOf="@+id/timer_hours"
            app:layout_constraintTop_toTopOf="@+id/timer_seconds"
            tools:text="00" />

        <TextView
            android:id="@+id/timer_seconds"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/offers_background"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/saves_slider_furniture_name"
            app:layout_constraintLeft_toRightOf="@+id/timer_minutes"
            app:layout_constraintTop_toTopOf="@+id/saves_slider_furniture_name"
            tools:text="00" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/saves_slider_orderBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/login_color"
            android:drawableRight="@drawable/order_now"
            android:text="اطلب الان"
            android:textSize="18sp"
            app:cornerRadius="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/saves_slider_price" />
        <View
            android:id="@+id/separator"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/edit_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/saves_slider_furniture_name"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="45dp" />


</androidx.constraintlayout.widget.ConstraintLayout>