<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/offers_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/offers_background">
    <ImageView
        android:id="@+id/offers_slider_icon1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/offers_slider_name" />

    <ImageView
        android:id="@+id/offers_slider_icon2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/offers_slider_icon1" />

    <ImageView
        android:id="@+id/offers_slider_icon3"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/offers_slider_icon2" />

    <ImageView
        android:id="@+id/offers_slider_furnitureIcon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/offers_slider_icon3" />

    <ImageView
        android:id="@+id/offers_img"
        android:layout_width="160dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline4"
        app:layout_constraintVertical_bias="0.49" />

    <TextView
        android:id="@+id/offers_slider_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text=" انتريه مودرن" />

    <TextView
        android:id="@+id/offers_slider_product1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/offers_slider_icon1"
        app:layout_constraintStart_toEndOf="@+id/offers_slider_icon1"
        app:layout_constraintTop_toTopOf="@+id/offers_slider_icon1"
        tools:text="عرض 1" />

    <TextView
        android:id="@+id/offers_slider_product2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/offers_slider_icon2"
        app:layout_constraintStart_toEndOf="@+id/offers_slider_icon2"
        app:layout_constraintTop_toTopOf="@+id/offers_slider_icon2"
        tools:text="عرض2" />

    <TextView
        android:id="@+id/offers_slider_product3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/offers_slider_icon3"
        app:layout_constraintStart_toEndOf="@+id/offers_slider_icon3"
        app:layout_constraintTop_toTopOf="@+id/offers_slider_icon3"
        tools:text="عرض3" />

    <TextView
        android:id="@+id/offers_slider_furniture_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/offers_slider_furnitureIcon"
        app:layout_constraintStart_toEndOf="@+id/offers_slider_furnitureIcon"
        app:layout_constraintTop_toTopOf="@+id/offers_slider_furnitureIcon"
        tools:text="عرض3" />
        <TextView
            android:id="@+id/offers_slider_pricetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/offers_slider_furnitureIcon"
            android:text="@string/price_txt" />
    <TextView
        android:id="@+id/offers_slider_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/offers_slider_pricetxt"
        app:layout_constraintTop_toBottomOf="@+id/offers_slider_furnitureIcon"
        tools:text="سعر العرض" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="266dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="16dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/offers_slider_orderBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="32dp"
        app:cornerRadius="16dp"
       app:layout_constraintTop_toBottomOf="@+id/offers_card"
        app:layout_constraintBottom_toBottomOf="@+id/offers_card"
        android:backgroundTint="@color/login_color"
        android:text="@string/order_now"
        android:textSize="18sp"
        android:drawableEnd="@drawable/order_now"
        />
</androidx.constraintlayout.widget.ConstraintLayout>